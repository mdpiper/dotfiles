;; A customized .emacs file for Linux, with el-get installed for
;; package management.

;; Keybinding to refresh buffer. http://emacs.stackexchange.com/a/172
(global-set-key (kbd "C-c r") (lambda ()
                                (interactive)
                                (revert-buffer t t t)
                                (message "Refreshed buffer")))

;; Fortran mode.
( setq auto-mode-alist ( append '(
		("\\.f77$". fortran-mode )
		("\\.F77$". fortran-mode )
) auto-mode-alist ) )

;; Use Octave mode for MATLAB.
(setq auto-mode-alist
      (cons '("\\.m$" . octave-mode)
	        auto-mode-alist))

;; Use json-mode for Jupyter Notebooks.
(setq auto-mode-alist
      (cons '("\\.ipynb$" . json-mode)
	        auto-mode-alist))

;; Use shell-script-mode for Dakota input files.
(setq auto-mode-alist
      (cons '("\\.in$" . shell-script-mode)
	        auto-mode-alist))

(add-hook 'java-mode-hook (lambda () (setq c-basic-offset 2 tab-width
	                                  2 indent-tabs-mode nil)))

;; Interactively do things (e.g., switching buffers).
(require 'ido)
(ido-mode t)

;; Setup for el-get; see https://github.com/dimitri/el-get.
(add-to-list 'load-path "~/.emacs.d/el-get/el-get")
(unless (require 'el-get nil 'noerror)
  (with-current-buffer
      (url-retrieve-synchronously
       "https://raw.github.com/dimitri/el-get/master/el-get-install.el")
    (goto-char (point-max))
    (eval-print-last-sexp)))
(add-to-list 'el-get-recipe-path "~/.emacs.d/el-get-user/recipes")
(el-get 'sync)

;---------------------------------------------------------------------------

(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(blink-cursor-mode nil)
 '(column-number-mode t)
 '(tool-bar-mode nil))

(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(default ((t (:inherit nil :stipple nil :background "gray5" :foreground "seashell1" :inverse-video nil :box nil :strike-through nil :overline nil :underline nil :slant normal :weight normal :height 121 :width normal :foundry "bitstream" :family "Courier 10 Pitch"))))
 '(font-lock-comment-face ((t (:foreground "SteelBlue3"))))
 '(font-lock-keyword-face ((t (:foreground "brown2"))))
 '(font-lock-string-face ((t (:foreground "burlywood1"))))
 '(link ((t (:foreground "LightBlue3" :underline t)))))
