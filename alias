# Aliases

alias ls='ls -G --color'
alias ll='ls -la'
alias la='ls -A'
alias l='ls -CF'
alias k='l'
alias lth='ll -t | head'
alias cls='clear'
alias grep='grep -n --color=auto'
alias igrep='grep -I'  # ignore binary files
alias ifgrep='fgrep -I'
alias dv='dirs -v'
alias pd='pushd'
alias tree='tree -C'
alias diffu='diff -u --color=always'
alias ec='emacsclient'
